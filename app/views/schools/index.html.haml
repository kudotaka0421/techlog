= render partial: 'schools/header', locals: { }
.main-contents
  = image_tag "toppage/main_m.jpg", class: "back-image"
  .popularity-index
    %h2.index-genre
      場所から探す
    %div.genre
      %ul.genre__wrapper
        %li.genre__wrapper__list
          = link_to location_path(13), class: "genre__wrapper__list__name" do
            東京
            = image_tag "https://takeshi.top/wp-content/uploads/2017/06/prosch-sejuku.png", class:"genre__wrapper__list__image"
        %li.genre__wrapper__list
          = link_to location_path(14), class: "genre__wrapper__list__name" do
            横浜
        %li.genre__wrapper__list
          = link_to location_path(23), class: "genre__wrapper__list__name" do
            名古屋
        %li.genre__wrapper__list
          = link_to location_path(27), class: "genre__wrapper__list__name" do
            大阪
        %li.genre__wrapper__list
          = link_to location_path(40), class: "genre__wrapper__list__name" do
            福岡
        %li.genre__wrapper__list
          = link_to location_path(48), class: "genre__wrapper__list__name" do
            オンライン

  .popularity-index
    %h2.index-genre
      言語から探す
    %div.genre
      %ul.genre__wrapper
        %li.genre__wrapper__list
          = link_to language_path(1), class: "genre__wrapper__list__name" do
            Ruby
            = image_tag "https://takeshi.top/wp-content/uploads/2017/06/prosch-sejuku.png", class:"genre__wrapper__list__image"
        %li.genre__wrapper__list
          = link_to language_path(3), class: "genre__wrapper__list__name" do
            Python
        %li.genre__wrapper__list
          = link_to language_path(2), class: "genre__wrapper__list__name" do
            PHP
        %li.genre__wrapper__list
          = link_to language_path(4), class: "genre__wrapper__list__name" do
            Java
        %li.genre__wrapper__list
          = link_to language_path(5), class: "genre__wrapper__list__name" do
            HTML / CSS
  .wrapper
    .items
      .items__genre

        .items__genre__title
          %h3.items__genre__title__text
            スクール一覧

        .item-index
          .items
            - @schools.each do |school|
              .item
                = link_to school_path(school), class: "item-link" ,'data-turbolinks': false do
                  = image_tag "#{school.image_url}", class:"item__image"
                  .item__name
                    %span.item__name__text
                      = school.name
= render partial: 'schools/footer', locals: { }